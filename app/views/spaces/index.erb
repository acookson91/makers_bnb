<div class='spacelist'>

  <form action='/spaces/new'>
    <input type='submit' value='New space'>
  </form>



  <div class="list-group">
    <% @spaces.each do |space| %>
      <% if space.bookings.get("Approved") %>
            <!-- *blank* -->
      <% else %>
          <a href="#" class="list-group-item">
            <span class="list-group-item-heading"><%= space.name %></span>
            <form action="/space" method="post" class="list-group-button">
              <input type="text" name='space_id' hidden value= <%=space.id %>>
              <input type="submit" value="View Space" class="btn btn-primary"></button>
            </form>
            <p class="list-group-item-desc"><%= space.desc %></p>
            <p class="list-group-item-price">Â£<%= space.price %> per night</p>
          </a>
      <% end %>
    <% end %>
  </div>

</div>
